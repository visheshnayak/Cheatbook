<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.faceless.cheatbook.Developer"
    tools:showIn="@layout/activity_developer"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: Student"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTML Tags: All html tags at one place."
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="html"
        android:layout_marginBottom="20dp"
        android:id="@+id/html"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GIT: contains all commands regarding GIT."
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="git"
        android:layout_marginBottom="20dp"
        android:id="@+id/git"/>

</LinearLayout>
